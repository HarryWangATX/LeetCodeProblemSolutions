import java.lang.Math;

class Solution {
    public boolean isPowerOfFour(int num) {
        if(num <= 0){
            return false;
        }
        
        int sum = 1;
        
        for(int i = 0; i<=Math.sqrt(num); i++){
            if(sum==num){
                return true;
            }
            
            sum *= 4;
            
        
        }
        
        
        return false;
    }
}
